<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/dm025"
                      android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_gold_pond_history_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天山股份"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_gold_pond_history_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm015"
                    android:text="002340"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="入选价格"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_gold_pond_history_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm015"
                    android:text="16.92"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="买入时间"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_gold_pond_history_item_highprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm015"
                    android:text="10.22"
                    android:textColor="@color/colorRise"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="最高涨幅"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_gold_pond_history_item_highrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dm015"
                    android:text="4.6%"
                    android:textColor="@color/colorRise"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_gold_pond_history_item_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm025"
        android:layout_marginTop="@dimen/dm015"
        android:text="推荐理由：一带一路政策影响"
        android:textColor="@color/titleTextGray"
        android:textSize="@dimen/dm022"/>

</LinearLayout>
