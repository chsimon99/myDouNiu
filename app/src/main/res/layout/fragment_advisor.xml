<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="@dimen/dm072">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm072"
            android:background="@color/colorTitle"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_fragment_advisor_direct"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="直播室"
                    android:textColor="@color/colorGrayWhite"
                    android:textSize="@dimen/dm028"/>
                <View
                    android:id="@+id/v_fragment_advisor_direct"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/dm001"
                    android:layout_marginLeft="@dimen/dm012"
                    android:layout_marginRight="@dimen/dm012"
                    android:background="@color/colorWhite"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_fragment_advisor_public"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="直播室"
                    android:textColor="@color/colorGrayWhite"
                    android:textSize="@dimen/dm028"/>
                <View
                    android:id="@+id/v_fragment_advisor_public"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/dm001"
                    android:layout_marginLeft="@dimen/dm012"
                    android:layout_marginRight="@dimen/dm012"
                    android:background="@color/colorWhite"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_fragment_advisor_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="直播室"
                    android:textColor="@color/colorGrayWhite"
                    android:textSize="@dimen/dm028"/>
                <View
                    android:id="@+id/v_fragment_advisor_gold"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/dm001"
                    android:layout_marginLeft="@dimen/dm012"
                    android:layout_marginRight="@dimen/dm012"
                    android:background="@color/colorWhite"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_fragment_advisor_ask"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="直播室"
                    android:textColor="@color/colorGrayWhite"
                    android:textSize="@dimen/dm028"/>
                <View
                    android:id="@+id/v_fragment_advisor_ask"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/dm001"
                    android:layout_marginLeft="@dimen/dm012"
                    android:layout_marginRight="@dimen/dm012"
                    android:background="@color/colorWhite"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_fragment_advisor_reference"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="直播室"
                    android:textColor="@color/colorGrayWhite"
                    android:textSize="@dimen/dm028"/>
                <View
                    android:id="@+id/v_fragment_advisor_reference"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/dm001"
                    android:layout_marginLeft="@dimen/dm015"
                    android:layout_marginRight="@dimen/dm015"
                    android:background="@color/colorWhite"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_fragment_advisor_view"
            android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <View
                android:id="@+id/v_fragment_advisor_view"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/colorWhite"
                android:layout_marginBottom="@dimen/dm001"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.zfxf.douniu.view.MyViewPager
        android:id="@+id/vp_fragment_advisor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
