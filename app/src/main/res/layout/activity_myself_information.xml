<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:id="@+id/ll_myself_information_content"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm200"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm020"
            android:text="头像"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_myself_information_img"
            android:layout_width="@dimen/dm160"
            android:layout_margin="@dimen/dm020"
            android:src="@drawable/advisor_home_img"
            android:layout_height="@dimen/dm160"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_myself_information_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm020"
                android:text="昵称"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/et_myself_information_name"
                android:layout_width="@dimen/dm200"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm020"
                android:textColor="@color/titleTextGray"
                android:textColorHint="@color/titleTextGray"
                android:textSize="@dimen/dm024"
                android:gravity="right"
                android:background="@null"
                android:visibility="gone"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_myself_information_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm020"
                android:text="请输入您的昵称"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/ll_myself_information_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm020"
                android:text="生日"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_myself_information_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm020"
                android:text="请输入您的生日"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/ll_myself_information_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm020"
                android:text="所在地"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm026"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_myself_information_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm020"
                android:text="请输入您的所在地"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/gray"/>
        <LinearLayout
            android:id="@+id/ll_myself_information_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm020"
                android:text="简介"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/et_myself_information_info"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm090"
                android:textColor="@color/titleTextGray"
                android:textColorHint="@color/titleTextGray"
                android:textSize="@dimen/dm024"
                android:gravity="right"
                android:background="@null"
                android:visibility="gone"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_myself_information_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm020"
                android:text="请输入您的简介"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
