<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBgGary">
        <com.zfxf.douniu.view.MyScrollview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm072"
            android:background="@color/colorWhite"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm350"/>
                <!--<ImageView-->
                    <!--android:id="@+id/iv_xiangmu_detail_img"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/dm210"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:src="@drawable/xiangmu_img"/>-->

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dm030">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dm024"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="项目名称："
                                    android:textColor="@color/titleText"
                                    android:textSize="@dimen/dm028"/>
                                <TextView
                                    android:id="@+id/tv_xiangmu_detail_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/dm028"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dm010"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="所属领域："
                                    android:textColor="@color/titleText"
                                    android:textSize="@dimen/dm028"/>
                                <TextView
                                    android:id="@+id/tv_xiangmu_detail_lingyu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/dm028"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dm010"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="融资金额："
                                    android:textColor="@color/titleText"
                                    android:textSize="@dimen/dm028"/>
                                <TextView
                                    android:id="@+id/tv_xiangmu_detail_money"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/dm028"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dm010"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="公司地址："
                                    android:textColor="@color/titleText"
                                    android:textSize="@dimen/dm028"/>
                                <TextView
                                    android:id="@+id/tv_xiangmu_detail_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/dm028"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dm010"
                                android:layout_marginBottom="@dimen/dm024"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="联系电话："
                                    android:textColor="@color/titleText"
                                    android:textSize="@dimen/dm028"/>
                                <TextView
                                    android:id="@+id/tv_xiangmu_detail_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/dm028"/>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/iv_xiangmu_detail_type"
                            android:layout_width="@dimen/dm090"
                            android:layout_height="@dimen/dm080"
                            android:layout_marginBottom="@dimen/dm020"
                            android:layout_marginRight="@dimen/dm024"
                            android:layout_marginTop="@dimen/dm020"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm016"
                    android:background="@color/colorBgGary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dm065"
                        android:layout_marginLeft="@dimen/dm024"
                        android:gravity="center_vertical"
                        android:text="项目概要"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:id="@+id/tv_xiangmu_detail_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dm024"
                        android:text=""
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dm024"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm016"
                    android:background="@color/colorBgGary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dm065"
                        android:layout_marginLeft="@dimen/dm024"
                        android:gravity="center_vertical"
                        android:text="商业计划书"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <LinearLayout
                        android:id="@+id/ll_xiangmu_detail_book"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/dm033"
                            android:layout_height="@dimen/dm038"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dm018"
                            android:src="@drawable/icon_book"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dm020"
                            android:text="商业计划书"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/dm024"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.zfxf.douniu.view.MyScrollview>
        <TextView
            android:id="@+id/tv_xiangmu_detail_qualify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm072"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTitle"
            android:gravity="center"
            android:text="项目调研"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm032"/>
    </RelativeLayout>
</LinearLayout>
