<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dm070"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_stock_trade_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:text="钢铁"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
        <TextView
            android:id="@+id/tv_stock_trade_detail_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3.03%"
            android:textColor="@color/colorRise"
            android:textSize="@dimen/dm028"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm055"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/colorBgGary"
                  android:layout_marginLeft="@dimen/dm018"
                  android:layout_marginRight="@dimen/dm018"
                  android:paddingBottom="@dimen/dm020"
                  android:paddingTop="@dimen/dm020"
                  android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="名称"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dm024"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="现价"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dm024"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="最高涨幅"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dm024"/>
    </LinearLayout>
    <com.zfxf.douniu.view.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:id="@+id/rv_stockr_trade_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"/>
</LinearLayout>
