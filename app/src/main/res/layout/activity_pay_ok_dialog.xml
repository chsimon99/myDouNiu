<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_bg_white_color"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dm025"
        android:layout_marginTop="@dimen/dm030"
        android:text="付款成功"
        android:textColor="@color/titleText"
        android:textSize="@dimen/dm034"/>
    <TextView
        android:id="@+id/tv_pay_ok_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm035"
        android:layout_marginRight="@dimen/dm035"
        android:text="您的问题已经成功提交，我们的分析师团队会尽快解答。您可以在 我的—我的问答 中查看。"
        android:textColor="@color/titleText"
        android:textSize="@dimen/dm026"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dm025"
        android:background="@color/gray"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dm100"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_pay_ok_dialog_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/dm034"/>
    </LinearLayout>
</LinearLayout>
