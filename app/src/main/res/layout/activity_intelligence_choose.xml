<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
    <com.zfxf.douniu.view.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/colorTitle"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:paddingBottom="@dimen/dm010"
                              android:paddingTop="@dimen/dm010">
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_gravity="center"
                                  android:layout_weight="1"
                                  android:gravity="center"
                                  android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="平均收益"
                            android:textColor="@color/colorWhiteE"
                            android:textSize="@dimen/dm028"/>
                        <TextView
                            android:id="@+id/tv_intelligence_choose_average_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/dm048"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm015"
                            android:text="止损线"
                            android:textColor="@color/colorWhiteE"
                            android:textSize="@dimen/dm024"/>
                        <TextView
                            android:id="@+id/tv_intelligence_choose_fall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm010"
                            android:text="%"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/dm038"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dm065"
                        android:layout_gravity="center"
                        android:background="@color/colorGray"/>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_gravity="center"
                                  android:layout_weight="1"
                                  android:gravity="center"
                                  android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选股成功率"
                            android:textColor="@color/colorWhiteE"
                            android:textSize="@dimen/dm028"/>
                        <TextView
                            android:id="@+id/tv_intelligence_choose_sucess_ratio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/dm048"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm015"
                            android:text="持股周期"
                            android:textColor="@color/colorWhiteE"
                            android:textSize="@dimen/dm024"/>
                        <TextView
                            android:id="@+id/tv_intelligence_choose_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm010"
                            android:text="天"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/dm038"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/dm010"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_marginRight="@dimen/dm020"
                    android:layout_marginTop="@dimen/dm015"
                    android:background="@color/colorWhite"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginLeft="@dimen/dm020"
                              android:layout_marginRight="@dimen/dm020"
                              android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_intelligence_choose_subscribe_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订阅："
                        android:textColor="@color/colorWhiteE"
                        android:textSize="@dimen/dm022"/>
                    <TextView
                        android:id="@+id/tv_intelligence_choose_subscribe_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm030"
                        android:text=""
                        android:textColor="@color/colorWhiteE"
                        android:textSize="@dimen/dm022"/>
                </LinearLayout>
                <!--<TextView-->
                    <!--android:id="@+id/tv_intelligence_choose_subscribe_content"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginBottom="@dimen/dm010"-->
                    <!--android:layout_marginLeft="@dimen/dm020"-->
                    <!--android:layout_marginRight="@dimen/dm020"-->
                    <!--android:layout_marginTop="@dimen/dm010"-->
                    <!--android:text=""-->
                    <!--android:textColor="@color/colorWhiteE"-->
                    <!--android:textSize="@dimen/dm022"/>-->
                <com.zfxf.douniu.view.ExpandableTextView
                    android:id="@+id/expandable_text"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_source_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dm010"
                        android:layout_marginLeft="@dimen/dm020"
                        android:layout_marginRight="@dimen/dm020"
                        android:layout_marginTop="@dimen/dm010"
                        android:text=""
                        android:textColor="@color/colorWhiteE"
                        android:textSize="@dimen/dm022"/>
                    <TextView
                        android:id="@+id/id_expand_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm020"
                        android:textColor="@android:color/background_light"
                        android:text="展开" />
                </com.zfxf.douniu.view.ExpandableTextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm010"
                    android:layout_marginBottom="@dimen/dm010"
                    android:orientation="horizontal">
                    <!--<ImageView-->
                        <!--android:layout_width="@dimen/dm026"-->
                        <!--android:layout_height="@dimen/dm026"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_marginLeft="@dimen/dm018"-->
                        <!--android:src="@drawable/icon_gold_tuijian"/>-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm018"
                        android:text="【必看】选股策略说明"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dm038"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:id="@+id/rl_intelligence_choose_tuijian"
                        android:layout_width="@dimen/dm220"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/dm014"
                            android:layout_height="@dimen/dm028"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dm018"
                            android:src="@drawable/icon_gold_right"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm016"
                android:background="@color/colorBgGary"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="@dimen/dm065"
                                  android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_intelligence_choose_stock_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dm016"
                            android:text="历史股票："
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/dm024"/>
                        <TextView
                            android:id="@+id/tv_intelligence_choose_stock_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/dm024"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <LinearLayout android:id="@+id/ll_intelligence_choose_history"
                                      android:layout_width="@dimen/dm180"
                                      android:layout_height="match_parent"
                                      android:gravity="right|center_vertical"
                                      android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dm016"
                                android:text="历史战绩》"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/dm024"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:background="@color/colorBgGary"
                                  android:orientation="horizontal"
                                  android:padding="@dimen/dm016">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="名称"
                            android:textColor="@color/titleText"
                            android:textSize="@dimen/dm024"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="现价/入选价格"
                            android:textColor="@color/titleText"
                            android:textSize="@dimen/dm024"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="入选时间"
                            android:textColor="@color/titleText"
                            android:textSize="@dimen/dm024"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="最高涨幅"
                            android:textColor="@color/titleText"
                            android:textSize="@dimen/dm024"/>
                    </LinearLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_intelligence_choose"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dm015"
                            android:layout_marginRight="@dimen/dm015"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm080"/>
            </LinearLayout>
        </LinearLayout>
    </com.zfxf.douniu.view.MyScrollview>
        <TextView
            android:id="@+id/tv_intelligence_choose_subscribe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTitle"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm032"/>
    </RelativeLayout>
</LinearLayout>
