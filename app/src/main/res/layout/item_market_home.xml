<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/ll_market_market_item1"
                          android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_market_home_name_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="上证指数"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_market_home_index_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm015"
                    android:text="--"
                    android:textColor="@color/colorRise"
                    android:textSize="@dimen/dm028"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm010"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_market_home_price_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="--"
                        android:textColor="@color/colorRise"
                        android:textSize="@dimen/dm024"/>
                    <TextView
                        android:id="@+id/tv_market_home_ratio_item1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm018"
                        android:text="--"
                        android:textColor="@color/colorRise"
                        android:textSize="@dimen/dm024"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/ll_market_market_item2"
                          android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_market_home_name_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="深证指数"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_market_home_index_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm015"
                    android:text="--"
                    android:textColor="@color/colorRise"
                    android:textSize="@dimen/dm028"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm010"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_market_home_price_item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="--"
                        android:textColor="@color/colorRise"
                        android:textSize="@dimen/dm024"/>
                    <TextView
                        android:id="@+id/tv_market_home_ratio_item2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm018"
                        android:text="--"
                        android:textColor="@color/colorRise"
                        android:textSize="@dimen/dm024"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/ll_market_market_item3"
                          android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_market_home_name_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="创业板指"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_market_home_index_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm015"
                    android:text="--"
                    android:textColor="@color/colorRise"
                    android:textSize="@dimen/dm028"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm010"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_market_home_price_item3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="--"
                        android:textColor="@color/colorRise"
                        android:textSize="@dimen/dm024"/>
                    <TextView
                        android:id="@+id/tv_market_home_ratio_item3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm018"
                        android:text="--"
                        android:textColor="@color/colorRise"
                        android:textSize="@dimen/dm024"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
