<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="@dimen/dm024"
                      android:layout_marginTop="@dimen/dm024"
                      android:orientation="vertical">
            <TextView android:id="@+id/tv_item_market_trade_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/dm012"
                      android:gravity="center"
                      android:text="格林美"
                      android:textColor="@color/titleText"
                      android:textSize="@dimen/dm024"/>
            <TextView android:id="@+id/tv_item_market_trade_ratio"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginBottom="@dimen/dm012"
                      android:gravity="center"
                      android:text="12.23"
                      android:textColor="@color/colorRise"
                      android:textSize="@dimen/dm028"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center"
                          android:orientation="horizontal">
                <TextView android:id="@+id/tv_item_market_trade_other_name"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="@dimen/dm012"
                          android:text="格林美"
                          android:textColor="@color/colorText"
                          android:textSize="@dimen/dm024"/>
                <TextView android:id="@+id/tv_item_market_trade_other_ratio"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="9.98%"
                          android:textColor="@color/colorRise"
                          android:textSize="@dimen/dm024"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
