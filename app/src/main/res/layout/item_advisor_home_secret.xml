<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm024"
        android:layout_marginTop="@dimen/dm024"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_advisor_home_secret_img"
            android:layout_width="@dimen/dm090"
            android:layout_height="@dimen/dm090"
            android:layout_marginLeft="@dimen/dm018"
            android:src="@drawable/public_img"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm025"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_advisor_home_secret_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="炒股指南"
                android:layout_marginTop="@dimen/dm005"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm015"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_advisor_home_secret_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017/04/01"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dm020"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_advisor_home_secret_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1486"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/dm022"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm010"
                    android:text="人参与"
                    android:textColor="@color/titleTextGray"
                    android:textSize="@dimen/dm022"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_advisor_home_secret_money"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dm015"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="￥ 299元"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
