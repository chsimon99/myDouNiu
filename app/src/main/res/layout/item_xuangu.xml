<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dm010"
                  android:layout_marginBottom="@dimen/dm010"
                  android:orientation="horizontal">
        <TextView android:id="@+id/tv_item_xuangu_name"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:text="格林美\n002340"
                  android:layout_gravity="center"
                  android:textColor="@color/titleText"
                  android:textSize="@dimen/dm024"/>
        <TextView android:id="@+id/tv_item_xuangu_price"
                  android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:text="12.23/12.23"
                  android:textColor="@color/colorToRed"
                  android:textSize="@dimen/dm028"/>
        <TextView android:id="@+id/tv_item_xuangu_time"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:text="07-23"
                  android:textColor="@color/titleText"
                  android:textSize="@dimen/dm028"/>
        <TextView android:id="@+id/tv_item_xuangu_ratio"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="right"
                  android:text="+9.98%"
                  android:textColor="@color/colorRise"
                  android:textSize="@dimen/dm028"/>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
