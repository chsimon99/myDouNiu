<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm070"
        android:layout_marginLeft="@dimen/dm018"
        android:layout_marginRight="@dimen/dm018"
        android:layout_marginTop="@dimen/dm045"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="项目名称"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm018"
            android:background="@drawable/backgroud_bg_white"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_xiangmu_apply_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:background="@null"
                android:hint="单行输入"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/titleTextGray"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm070"
        android:layout_marginLeft="@dimen/dm018"
        android:layout_marginRight="@dimen/dm018"
        android:layout_marginTop="@dimen/dm015"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="所属领域"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm018"
            android:background="@drawable/backgroud_bg_white"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_xiangmu_apply_lingyu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:background="@null"
                android:hint="单行输入"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/titleTextGray"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm070"
        android:layout_marginLeft="@dimen/dm018"
        android:layout_marginRight="@dimen/dm018"
        android:layout_marginTop="@dimen/dm015"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="融资金额"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm018"
            android:background="@drawable/backgroud_bg_white"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_xiangmu_apply_money"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:background="@null"
                android:hint="单行输入"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/titleTextGray"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm070"
        android:layout_marginLeft="@dimen/dm018"
        android:layout_marginRight="@dimen/dm018"
        android:layout_marginTop="@dimen/dm015"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="公司地址"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm018"
            android:background="@drawable/backgroud_bg_white"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_xiangmu_apply_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:background="@null"
                android:hint="单行输入"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/titleTextGray"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm070"
        android:layout_marginLeft="@dimen/dm018"
        android:layout_marginRight="@dimen/dm018"
        android:layout_marginTop="@dimen/dm015"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="联系电话"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm018"
            android:background="@drawable/backgroud_bg_white"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_xiangmu_apply_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:background="@null"
                android:hint="单行输入"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColorHint="@color/titleTextGray"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm270"
        android:layout_marginLeft="@dimen/dm018"
        android:layout_marginRight="@dimen/dm018"
        android:layout_marginTop="@dimen/dm015"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm010"
            android:text="项目介绍"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dm018"
            android:background="@drawable/backgroud_bg_white"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_xiangmu_apply_introduce"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="top"
                android:paddingTop="@dimen/dm010"
                android:hint="多行输入"
                android:maxLines="8"
                android:lineSpacingMultiplier="1.2"
                android:inputType="textMultiLine"
                android:textColorHint="@color/titleTextGray"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_xiangmu_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm045"
        android:background="@drawable/backgroud_button_app_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提交"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm034"/>
    </RelativeLayout>
</LinearLayout>
