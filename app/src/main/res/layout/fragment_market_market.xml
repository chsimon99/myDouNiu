<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <com.zfxf.douniu.view.PullToRefreshLayout
        android:id="@+id/ptrl_market_market"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/refresh_head"/>

        <com.zfxf.douniu.view.PullableScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:descendantFocusability="blocksDescendants"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:paddingBottom="@dimen/dm030"
                              android:paddingTop="@dimen/dm030">
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="上证指数"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/dm024"/>
                        <TextView
                            android:id="@+id/tv_market_market_sz_index"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dm015"
                            android:text="--"
                            android:textColor="@color/colorRise"
                            android:textSize="@dimen/dm028"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dm010"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_market_market_sz_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="--"
                                android:textColor="@color/colorRise"
                                android:textSize="@dimen/dm024"/>
                            <TextView
                                android:id="@+id/tv_market_market_sz_ratio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dm018"
                                android:text="--"
                                android:textColor="@color/colorRise"
                                android:textSize="@dimen/dm024"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="深证指数"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/dm024"/>
                        <TextView
                            android:id="@+id/tv_market_market_shz_index"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dm015"
                            android:text="--"
                            android:textColor="@color/colorRise"
                            android:textSize="@dimen/dm028"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dm010"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_market_market_shz_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="--"
                                android:textColor="@color/colorRise"
                                android:textSize="@dimen/dm024"/>
                            <TextView
                                android:id="@+id/tv_market_market_shz_ratio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dm018"
                                android:text="--"
                                android:textColor="@color/colorRise"
                                android:textSize="@dimen/dm024"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="创业版指"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/dm024"/>
                        <TextView
                            android:id="@+id/tv_market_market_cy_index"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dm015"
                            android:text="--"
                            android:textColor="@color/colorRise"
                            android:textSize="@dimen/dm028"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dm010"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_market_market_cy_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="--"
                                android:textColor="@color/colorRise"
                                android:textSize="@dimen/dm024"/>
                            <TextView
                                android:id="@+id/tv_market_market_cy_ratio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dm018"
                                android:text="--"
                                android:textColor="@color/colorRise"
                                android:textSize="@dimen/dm024"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm016"
                    android:background="@color/colorBgGary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm065"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dm040"
                        android:layout_height="@dimen/dm040"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm025"
                        android:src="@drawable/icon_rise"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm020"
                        android:text="涨幅榜"
                        android:textColor="#32384d"
                        android:textSize="@dimen/dm028"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:id="@+id/rl_market_market_rise_more"
                        android:layout_width="@dimen/dm120"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/dm014"
                            android:layout_height="@dimen/dm028"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dm025"
                            android:layout_marginRight="@dimen/dm020"
                            android:src="@drawable/home_jiantou"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_market_market_rise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_marginRight="@dimen/dm020"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm016"
                    android:background="@color/colorBgGary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm065"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dm040"
                        android:layout_height="@dimen/dm040"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm025"
                        android:src="@drawable/icon_fall"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm020"
                        android:text="跌幅榜"
                        android:textColor="#32384d"
                        android:textSize="@dimen/dm028"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:id="@+id/rl_market_market_fall_more"
                        android:layout_width="@dimen/dm120"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/dm014"
                            android:layout_height="@dimen/dm028"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dm025"
                            android:layout_marginRight="@dimen/dm020"
                            android:src="@drawable/home_jiantou"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_market_market_fall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_marginRight="@dimen/dm020"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm032"
                    android:background="@color/colorBgGary"/>
            </LinearLayout>
        </com.zfxf.douniu.view.PullableScrollView>
        <include layout="@layout/load_more"/>
    </com.zfxf.douniu.view.PullToRefreshLayout>
</LinearLayout>
