<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm030"
        android:layout_marginTop="@dimen/dm030"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_myself_subscribe_public_img"
            android:layout_width="@dimen/dm130"
            android:layout_height="@dimen/dm130"
            android:layout_marginLeft="@dimen/dm018"
            android:src="@drawable/public_img"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm025"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_myself_subscribe_public_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm002"
                android:text="炒股指南"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <TextView
                android:id="@+id/tv_myself_subscribe_public_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:text="中方信富首席工作室"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_myself_subscribe_public_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017/04/01"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dm020"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm007"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_myself_subscribe_public_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1468"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/dm022"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm010"
                    android:text="人参与"
                    android:textColor="@color/titleTextGray"
                    android:textSize="@dimen/dm022"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_myself_subscribe_public_type"
                android:layout_width="@dimen/dm110"
                android:layout_height="@dimen/dm045"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dm045"
                android:background="@drawable/backgroud_button_gary_color"
                android:gravity="center"
                android:text="已订阅"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>
