<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_advisor_all_secret_detail_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm260"
                android:scaleType="fitXY"
                android:src="@drawable/advisor_detail"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm024"
                android:paddingTop="@dimen/dm024">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm025"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_advisor_all_secret_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm002"
                        android:text=""
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                    <TextView
                        android:id="@+id/tv_advisor_all_secret_detail_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm010"
                        android:text="中方信富首席工作室"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dm024"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm010"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_advisor_all_secret_detail_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/titleTextGray"
                            android:textSize="@dimen/dm024"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dm020"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_advisor_all_secret_detail_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorTitle"
                            android:textSize="@dimen/dm022"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm010"
                            android:text="人参与"
                            android:textColor="@color/titleTextGray"
                            android:textSize="@dimen/dm022"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_advisor_all_secret_detail_money"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dm050"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="￥0元"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/dm028"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm016"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_advisor_all_secret_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dm070"
                        android:layout_marginTop="@dimen/dm002"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dm020"
                        android:text="课程介绍"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tv_advisor_all_secret_detail_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dm018"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/dm028"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>
                <TextView
                    android:id="@+id/tv_advisor_all_secret_detail_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dm020"
                    android:paddingLeft="@dimen/dm020"
                    android:text=""
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_advisor_all_secret_detail_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm090"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTitle"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm032"/>
    </RelativeLayout>
</LinearLayout>
