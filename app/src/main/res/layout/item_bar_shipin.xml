<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:id="@+id/vp_bar_shipin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm350"
                android:layout_marginBottom="@dimen/dm024"
                android:layout_marginTop="@dimen/dm024"/>
            <TextView
                android:id="@+id/tv_bar_shipin_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="视频说明"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm030"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm024"
                android:layout_marginTop="@dimen/dm016"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_bar_shipin_img"
                    android:layout_width="@dimen/dm054"
                    android:layout_height="@dimen/dm054"
                    android:src="@drawable/home_adviosr_img"/>
                <TextView
                    android:id="@+id/tv_bar_shipin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dm018"
                    android:text="视频说明"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm024"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:id="@+id/ll_bar_shipin_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dm029"
                        android:layout_height="@dimen/dm029"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_good_press"/>
                    <TextView
                        android:id="@+id/tv_bar_shipin_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm010"
                        android:text="8899"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/dm020"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
