<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_new_express_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm024"
            android:text="2017年4月7日 周五"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/dm028"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm024"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dm005"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dm020"
                    android:layout_height="@dimen/dm020"
                    android:src="@drawable/new_red_point"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorTitle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_new_express_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:30"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_new_express_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="据日本新华侨报报道，日本王文社报道。据日本新华侨报报道，日本王文社报道。据日本新华侨报报道，日本王文社报道。据日本新华侨报报道，日本王文社报道。据日本新华侨报报道，日本王文社报道。据日本新华侨报报道，日本王文社报道。据日本新华侨报报道，日本王文社报道。"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm026"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
