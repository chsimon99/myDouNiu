<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm035"
        android:layout_marginRight="@dimen/dm035"
        android:layout_marginTop="@dimen/dm055"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_rvaluate_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dm050"
            android:text=""
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/dm038"/>
        <TextView
            android:id="@+id/tv_rvaluate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm050"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dm030"
            android:layout_marginLeft="@dimen/dm030"
            android:layout_marginRight="@dimen/dm030"
            android:lineSpacingMultiplier="1.2"
            android:text=""
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
    </LinearLayout>

</LinearLayout>
